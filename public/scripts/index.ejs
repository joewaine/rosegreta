
(function(window, document, Papa) {
    
    let page = 'index';

    const path = window.location.pathname;
    const specificPage = window.location.search ? `/${window.location.search.split('=')[1]}` : ''

   if (path.includes('yoga')) {
        page = 'yoga';
    } else if (path.includes('kexp')) {
        page = 'kexp';
    } else if (path.includes('soundcloud')) {
        page = 'soundcloud';
    } else if (path.includes('contact')) {
        page = 'contact';
    }

    const templateMethods = {
        index(data){
            let body = '<div class="parent-container">';
            data.forEach(item => {
               if(item.type === "text"){
                body += `<div class="child-info">${item.body}</div>`
            }else{
                body += `<div class="child-info"><img src="images/${item.body}" alt="yoga"></div>`
            }                
            });

            body += `</div>`;

            return `<div class="body-section">
                ${body}


                
            </div>
`;
        },
        contact(data) {
            //name,title,email,instagram,imageurl
            let body = '';

            data.forEach(item => {
                body += `<div class="parent-container"><h1>contact</h1>
                           <div class="child-info"><br>
                            <u>${item.email}</u>
                        <br><br>
                        <u>${item.link}</u><br>
                    </div>
                </div>`

            });
            


            return `<div class="body-section">
                ${body}
                </div>
`;

        },
        soundcloud(data) {
            //name,title,email,instagram,imageurl
